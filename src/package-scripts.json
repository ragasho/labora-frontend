{
  "scripts": {
    "dev": "npm start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "cd supabase/functions/server && deno run --allow-net --allow-env --allow-read index.jsx",
    "server:dev": "cd supabase/functions/server && deno run --allow-net --allow-env --allow-read --watch index.jsx",
